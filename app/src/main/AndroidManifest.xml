<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hbc.depok">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MenuActivity"
            android:label="Main Menu"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".ArticleActivity"
            android:label="List Artikel"
            android:launchMode="singleTop">

        </activity>

        <activity
            android:name=".ui.DetailArtikelActivity"
            android:label="Member Detail"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ArticleActivity" />
        </activity>

          <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/search_layout" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <!-- <action android:name="android.intent.action.MAIN" /> -->
       <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.DetailMemberActivity"
            android:label="Member Detail"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>