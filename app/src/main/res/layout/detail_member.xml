<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tvdetailId1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="ID"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/viewPager" />

    <TextView
        android:id="@+id/tvdetailNama1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15sp"
        android:text="NAMA"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailId1" />

    <TextView
        android:id="@+id/tvdetailAlamat1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15sp"
        android:text="ALAMAT"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailNama1" />

    <TextView
        android:id="@+id/tvdetailTlp1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15sp"
        android:text="No Telp"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailAlamat1" />

    <TextView
        android:id="@+id/tvdetailPlat1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15sp"
        android:text="No Plat"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailTlp1" />

    <TextView
        android:id="@+id/tvdetailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="ID"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailId1"
        app:layout_constraintTop_toBottomOf="@+id/viewPager" />

    <TextView
        android:id="@+id/tvdetailNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="Nama"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailNama1"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailId" />
a
    <TextView
        android:id="@+id/tvdetailAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="ALAMAT"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailAlamat1"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailNama" />

    <TextView
        android:id="@+id/tvdetailTelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="No Telp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailTlp1"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailAlamat" />

    <TextView
        android:id="@+id/tvdetailPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="No Plat"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailPlat1"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailTelp" />
</android.support.constraint.ConstraintLayout>