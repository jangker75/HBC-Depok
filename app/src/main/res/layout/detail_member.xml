    <TextView
        android:id="@+id/tvdetailId1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="ID"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/scroll" />

    <TextView
        android:id="@+id/tvdetailNama1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15sp"
        android:text="NAMA"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailId1" />

    <TextView
        android:id="@+id/tvdetailAlamat1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15sp"
        android:text="ALAMAT"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailNama1" />

    <TextView
        android:id="@+id/tvdetailTlp1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15sp"
        android:text="No Telp"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailAlamat1" />

    <TextView
        android:id="@+id/tvdetailPlat1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
