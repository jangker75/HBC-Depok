        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailTlp1" />

    <TextView
        android:id="@+id/tvdetailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="ID"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailId1"
        app:layout_constraintTop_toBottomOf="@id/scroll" />

    <TextView
        android:id="@+id/tvdetailNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="Nama"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailNama1"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailId" />
a
    <TextView
        android:id="@+id/tvdetailAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="ALAMAT"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailAlamat1"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailNama" />

    <TextView
        android:id="@+id/tvdetailTelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="No Telp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailTlp1"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailAlamat" />

    <TextView
        android:id="@+id/tvdetailPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:text="No Plat"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/tvdetailPlat1"
        app:layout_constraintTop_toBottomOf="@+id/tvdetailTelp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        app:layout_constraintTop_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgFoto1"
                android:layout_width="383dp"
                android:layout_height="300dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_image"
                app:layout_constraintTop_toBottomOf="@id/tvdetailPlat" />

            <ImageView
                android:id="@+id/imgFoto2"
                android:layout_width="383dp"
                android:layout_height="300dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_image"
                app:layout_constraintTop_toBottomOf="@id/imgFoto1" />

            <ImageView
                android:id="@+id/imgFoto3"
                android:layout_width="383dp"
                android:layout_height="300dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_image"
                app:layout_constraintTop_toBottomOf="@id/imgFoto2" />

        </LinearLayout>
    </HorizontalScrollView>

