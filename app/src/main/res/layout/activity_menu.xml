<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/logo_menu"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryTint"
        android:src="@drawable/hbc"
        android:layout_marginTop="0dp"
        />

    <ImageButton
        android:id="@+id/btnArticle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30sp"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/artikel"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_menu" />

    <ImageButton
        android:id="@+id/btnMember"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30sp"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toRightOf="@+id/btnArticle"
        app:layout_constraintTop_toBottomOf="@id/logo_menu"
        android:src="@drawable/anggota" />

    <ImageButton
        android:id="@+id/btnChangePassword"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30sp"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnArticle"
        android:src="@drawable/changepassword" />
</android.support.constraint.ConstraintLayout>