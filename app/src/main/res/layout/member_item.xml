<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="member"
            type="com.hbc.depok.model.DataMember" />

        <variable
            name="listener"
            type="com.hbc.depok.view.ui.MemberClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="8dp">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="2"
            android:imageUrl="@{member.foto1}"
            app:srcCompat="@drawable/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namaMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{member.nama}"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/platMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{member.noPlat}"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>
</layout>